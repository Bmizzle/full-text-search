<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "/stylesheets/application.css" %>
	<%= stylesheet_link_tag "/javascripts/fancybox/jquery.fancybox-1.3.4.css"%>
    <%= javascript_include_tag :defaults %>
	<%= javascript_include_tag "/javascripts/fancybox/jquery.fancybox-1.3.4.pack.js", "/javascripts/fancybox/jquery.easing-1.3.pack.js", "/javascripts/fancybox/jquery.mousewheel-3.0.4.pack.js"%>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>  		
    <div id="container">
    	<div id="header">
	  		<% if !current_user %>
				<%= link_to "Sign Up", new_user_path %> |
				<%= link_to "Sign In", new_user_session_path %> |
				<%= link_to "Search", search_path%>
			<% else %>
				<%= link_to "My Account", user_path(current_user) %> |
				<% if auth_provider.nil? %><%= link_to "Change Password", change_password_users_path %> |<% end%>				
				<% if !auth_provider.nil? %><%= link_to "Friends", friends_path %> |<% end%>
				<%= link_to "Search", search_path%> |
				<%= link_to "Sign out", user_session_path(current_user), :method => :delete, :confirm => "Are you sure you want to signout?" %>
			<% end %>		
  		</div>
		<% if current_user%>
			<div style="float:right;border:1px solid #000000;padding:10px;background-color:#CDD;">					
				<%=raw "You claimed <b>$#{totalclaimed.to_f}</b> -- till now"%>
			</div>
		<% end%>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
