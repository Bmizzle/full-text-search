<% title 'Search' if params[:search].nil?%>
<% title 'Search Results' if !params[:search].nil?%>

<div id='search-form'>
	<%= form_tag search_path, :method => :get do %>
		<p>
			<%= text_field_tag :search, (params[:search]||@search_keywords), :style => 'width:350px;' %>&nbsp;&nbsp;<%= submit_tag :search, :id => 'btn_search'%><br>
			<span style="font-size:11px;"><%= link_to "Advanced search", advance_search_path %></span>
  		</p>
		<%= hidden_field_tag :search_type, (params[:search_type] || "normal")%>
	<% end%>
</div>

<% if !@claim_mains.empty?%>
	<div class="hr-line"></div>	
	<div id="search-results">
		<div style="padding: 2px 3px;margin: 5px 0;text-align:right;">
			<%=raw page_entries_info @claim_mains, :entry_name => 'results' %>	
		</div>		
		<% sr = (@page-1)*10%>
		<table border='1px' cellpadding='2px' width='100%'>
			<tr>
				<td>S.No</td>
				<td>Last Name</td>
				<td>First Name</td>
				<td>City</td>
				<td>State</td>
				<td>View Details</td>				
			</tr>		
			<% for claim_main in @claim_mains %>
			<tr>
				<td><%= sr+=1%></td>
				<td><%= claim_main.lastname%></td>
				<td><%= claim_main.firstname%></td>
				<td><%= claim_main.city%></td>
				<td><%= claim_main.state%></td>
				<td align="center"><%= link_to "View", claim_main_path(claim_main)%></td>
			</tr>
			<% end%>
		</table>
		<%= will_paginate @claim_mains %>		
	</div>	
<% elsif !params[:commit].blank?%>
	<div class="no-results">
		Their no results found. Please search with different keywords
	</div>		
<% end%>

<script type="text/javascript">
	$(function(){
		$('#btn_search').click(function(e){
			$('#search_type').val('normal')
		});				
	})
</script>
