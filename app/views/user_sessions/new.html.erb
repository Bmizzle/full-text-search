<% title 'Sign In'%>

<%= form_for @user_session, :url => user_sessions_path do |f| %>
  <%= f.error_messages %>
  <p>
	  <%= f.label :login, "Username or Email" %><br />
	  <%= f.text_field :login %>
  </p>
  <p>
  	<%= f.label :password %><br />
  	<%= f.password_field :password %>
  </p>  
  <p>
  	<%= f.check_box :remember_me %><%= f.label :remember_me %>
  </p>	
  <p>
  	<%= f.submit "Sign In" %>
  </p>
  <p>
  	<%= link_to "Reset Password", new_password_reset_path %>
  </p>	
<% end %>

<h2>OR</h2>
<h3>Sign in with</h3>
<% ["twitter","facebook", "linked_in"].each do |provider| %>
  <%= link_to image_tag("auth/#{provider}_64.png"), "/auth/#{provider}" %>
<% end %>
<%= link_to image_tag("auth/google_64.png"), "/auth/open_id?openid_url=https://www.google.com/accounts/o8/id" %>