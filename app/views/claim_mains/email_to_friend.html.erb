<% title "Email to friend :: #{TITLE}"%>
<% javascript('/javascripts/jquery.validate.js')%>

<div>
	<%= form_tag email_to_friend_claim_main_path, :id=> 'email_to_friend', :method => :get do %>
		<p>
			<%= label_tag :email %><br />
			<%= text_field_tag :email, '',{:class => "required email"} %>
  		</p>
		<p>
			<%= submit_tag 'Send'%>
		</p>
	<% end%>
</div>

<script type="text/javascript">
	$(function(){
		$("#email_to_friend").validate();
	});
</script>